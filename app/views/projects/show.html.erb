
<h2><%= @project.name %></h2>
<div class="field">
  <%= label_tag 'Name' %>
  <%= @project.name %>
</div>
<div class="field">
  <%= label_tag 'Description' %>
  <%= @project.description %>
</div>


<%= link_to 'Back', projects_path, :class => 'button' %>
<br/>
<br/>


<h3>Release(s):</h3>
<table>
  <tr>
    <th>Name</th>
    <th>Release date</th>
    <th colspan="2">Actions</th>
  </tr>

<% @releases.each do |release| %>
  <tr>
    <td><%= link_to release.name, release %></td>
    <td><%= release.release_date %></td>
    <td><%= link_to 'Edit', edit_release_path(release) %></td>
    <td><%= link_to 'Destroy', release, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<%= link_to 'New Release', 'javascript:newRelease()', :class => 'button' %>

<div id="release-form" class="hidden">

 <%= render :partial => 'releases/form',
            :locals => {
              :project => @project,
              :release => @project.releases.new,
            } %>
</div>

<script>
   function newRelease() {
    $('#release-form').dialog({
      modal: true



    });

  }
</script>
