<h2>My Account</h2>

<%= form_for( current_admin, :url => admin_update_account_path ) do |f| %>
  <% unless current_admin.errors.empty? %>
  <div id="error_explanation">
    <h2><%= pluralize(current_admin.errors.count, "error") %> prohibited this user from being saved:</h2>

    <ul>
    <% current_admin.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <%= label_tag :username %>
    <%= current_admin.username %>
  </div>

  <div class="field">
    <%= f.label :firstname %>
    <%= f.text_field :firstname %>
  </div>

  <div class="field">
    <%= f.label :lastname %>
    <%= f.text_field :lastname %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="actions">
    <%= hidden_field_tag 'from', 'my_account' %>
    <%= f.submit 'Save' %>
    <input id="reset" type="reset" name="reset" value="Reset" />
  </div>

<% end %>

<%= javascript_tag do %>
  $('#reset').button();
<% end %>
