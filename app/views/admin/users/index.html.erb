<%= render 'navigation' %>

<h1>User Listing</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th colspan="2">Actions</th>
  </tr>

<% @users.each do |user| %>
  <tr id="row-<%= user.id %>">
    <td><%= user.id %></td>
    <td><%= link_to user.fullname, admin_user_path(user) %></td>
    <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
    <td><%= link_to 'Destroy',
            delete(admin_user_path(user.id), 'Delete User') %></td>
  </tr>
<% end %>
</table>

<br />

