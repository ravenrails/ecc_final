<%= render 'navigation' %>
<h2>Admins</h2>

<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th colspan="2">Actions</th>
  </tr>

<% @admins.each do |admin| %>
  <tr id="row-<%= admin.id %>">
    <td><%= admin.id %></td>
    <td><%= link_to admin.fullname, admin_user_path(admin) %></td>
    <td><%= link_to 'Edit', edit_admin_user_path(admin) %></td>
    <td><%= link_to 'Destroy',
            delete(admin_user_path(admin.id), 'Delete User') %></td>
  </tr>
<% end %>
</table>

<br />

