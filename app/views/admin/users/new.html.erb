<%= render 'navigation' %>

<h1>New admin</h1>

<%= form_for(@admin, :url => admin_users_path) do |form| %>

  <%= render :partial => 'error', :locals => { :admin => @admin } if @admin.errors.any? %>

  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation, 'Confirm Password' %>
    <%= form.password_field :password_confirmation %>
  </div>

  <%= render :partial => 'form', :locals => { :f => form, :admin => @admin } %>

  <div class="actions">
    <%= form.submit 'Create' %>
    <%= link_to 'Back', admin_users_path, :class => 'button' %>
  </div>
<% end %>

