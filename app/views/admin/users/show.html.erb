<%= render 'navigation' %>

<h1>Show user</h1>

  <div class="field">
    <%= label_tag 'Firstname' %>
    <%= label_tag @user.firstname %>
  </div>

  <div class="field">
    <%= label_tag 'Lastname' %>
    <%= label_tag @user.lastname %>
  </div>

  <div class="field">
    <%= label_tag 'Email' %>
    <%= label_tag @user.email %>
  </div>

  <div class="field">
    <%= label_tag @user.is_admin, 'Admin?' %>
    <%= label_tag (@user.is_admin) ? 'Yes': 'No' %>
  </div>

  <div class="actions">
    <%= link_to 'Edit', edit_admin_user_path(@user), :class => 'button' %>
    <%= link_to 'Back', admin_users_path, :class => 'button' %>
  </div>
