
<h1>Stories List</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Priority</th>
    <th colspan="3">Actions</th>
  </tr>

<% if @stories %>
  <% @stories.each do |story| %>
    <tr>
      <td><%= story.id %></td>
      <td><%= story.name %></td>
      <td><%= link_to 'Show', story_path(story) %></td>
      <td><%= link_to 'Edit', edit_story_path(story) %></td>
      <td><%= link_to 'Destroy', story_path(story.id), :confirm => 'Are you sure?', :method => :delete %></td>
   </tr>
  <% end %>
<% end %>
</table>

<%= link_to 'Tell a New Story', new_story_path %>

