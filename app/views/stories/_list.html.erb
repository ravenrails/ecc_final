<h3>Stories</h3>
<table>
  <tr>
    <th>Title</th>
    <th>Creator</th>
    <th>Priority</th>
    <th>Status</th>
  <% if authorize_for_story_crud? @release %>
    <th colspan="2">Actions</th>
  <% end %>
  </tr>
<% @release.stories.each do |story| %>
  <tr>
    <td><%= link_to story.name, release_story_path(story.release, story) %></td>
    <td><%= story.creator %></td>
    <td><%= story.priority %></td>
    <td><%= story.state %></td>
    
  <% if authorize_for_story_crud? @release %>
    <td><%= link_to 'Edit', edit_release_story_path(@release, story) %></td>
    <td><%= link_to 'Destroy', 
            delete('#', 'Delete Story', "deleteStory('#{release_story_path(story.release, story)}')") %></td>
  <% end %>
            
  </tr>
<% end %>
</table>
