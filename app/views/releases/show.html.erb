<p id="notice"><%= notice %></p>

<div class="field">
  <%= label_tag 'Name:'%>
  <%= @release.name %>
</div>

<div class="field">
  <%= label_tag 'Release date:' %>
  <%= @release.release_date %>
</div>
<br />

<div id="story-list">
  <%= render :partial => 'stories/list' %>
</div>
<br/>

<%= link_to 'Create Story', new_release_story_path(@release), 
        :class => 'button' %>

<script>
  function deleteStory(urlPath)
  {
    $.loading('Destroying Story');
     $.ajax({
      url: urlPath,
      type: 'POST',
      data: '_method=DELETE',
      dataType: 'text',
      complete: function(xhr) {
        eval(xhr.responseText);
        $.finished('Story Destroyed');
      }
    });
  }
</script>
